<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity"
              android:orientation="vertical"
              android:background="#877690">
    <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Calculator"
            android:textSize="30sp"
    />
    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="25sp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <Button
                android:id="@+id/clear"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:paddingHorizontal="5sp"
                android:layout_marginRight="3dp"/>
        <Button
                android:id="@+id/back"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="X"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_marginRight="3dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <Button
                android:id="@+id/seven"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/eight"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/nine"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/plus"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="25sp"

        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/four"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/five"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/six"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="25sp"

        />
        <Button
                android:id="@+id/minus"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/one"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/two"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/three"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="25sp"

        />
        <Button
                android:id="@+id/multiply"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/decimal"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/zero"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/calc"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
        <Button
                android:id="@+id/divide"
                android:background="@drawable/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#ffffff"
                android:textSize="25sp"
        />
    </LinearLayout>
</LinearLayout>