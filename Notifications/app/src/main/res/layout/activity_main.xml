<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/simpleNotificationBtn"
            android:textSize="25dp"
            android:layout_above="@+id/actionNotificationBtn"
            android:text="Notification 1"
    />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/actionNotificationBtn"
        android:textSize="25dp"
        android:text="Notification 2"
/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/otherNotificationBtn"
            android:textSize="25dp"
            android:text="Notification 3"
            android:layout_below="@id/actionNotificationBtn"
    />

</RelativeLayout>